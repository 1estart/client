{
  "extends": "@diplodoc/tsconfig",
  "compilerOptions": {
    "target": "es2020",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "lib": ["DOM"],
    "declaration": true,
    "outDir": "build",
    "jsx": "react",
    "baseUrl": ".",
    "paths": {
      "@diplodoc/openapi-extension/*": ["./node_modules/@diplodoc/openapi-extension/build/*"]
    }
  },
  "include": ["src", "./manifest.d.ts"],
  "exclude": ["node_modules"]
}
